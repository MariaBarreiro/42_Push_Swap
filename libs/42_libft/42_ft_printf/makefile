# **************************************************************************** #
#                                    Config                                    #
# **************************************************************************** #
MAKE = make --no-print-directory --silent
SHELL = bash
# **************************************************************************** #
#                                    NAMES                                     #
# **************************************************************************** #
NAME = libftprintf.a
EXEC = a.out
# **************************************************************************** #
#                                    Paths                                     #
# **************************************************************************** #
INC_PATH        = ./inc/

SRC_PATH        = ./src/

SRC_FILES       = ft_printf.c
SRC_FILES				+= ft_utils.c
SRC_FILES				+= ft_utils2.c
SRC_FILES				+= ft_printf_ptr.c
SRC_FILES				+= ft_printf_hex.c
SRC_FILES				+= ft_printf_str.c
SRC_FILES				+= ft_printf_uns.c

SRC             = $(addprefix $(SRC_PATH)/, $(SRC_FILES))

OBJS_DIR				= obj
OBJS				   	= $(patsubst %.c, $(OBJS_DIR)/%.o, $(SRC))

# **************************************************************************** #
#                                   Compiler                                   #
# **************************************************************************** #
CC              = cc
CFLAGS          = -Wall -Wextra -Werror -g
INC             = -I $(INC_PATH)
# **************************************************************************** #
#                                   Commands                                   #
# **************************************************************************** #
RM              = rm -rf
AR              = ar rcs
MKDIR           = mkdir -p
# **************************************************************************** #
#                                    Rules                                     #
# **************************************************************************** #
 
all: $(NAME)

$(OBJS_DIR):
	@mkdir -p Obj
#	@echo "ðŸ“‹ Objects directory created (Ft_Printf) ðŸ“‹"

$(OBJS_DIR)/%.o: %.c
	@mkdir -p $(dir $@)
	@$(CC) $(CFLAGS) $(INC) -c $< -o $@

$(NAME): $(OBJS_DIR) $(OBJS)
	$(AR) $(NAME) $(OBJS)
#	@echo "ðŸ¤Ž Compilation completed (Ft_Printf) ðŸ¤Ž"

clean:
	$(RM) $(OBJS)
#	@echo "ðŸŒ· Objects removed successfully (Ft_Printf)ðŸŒ·"

fclean: clean
	 $(RM) $(NAME) $(OBJS_DIR)
#	@echo "âœ¨ Program removed successfully (Ft_Printf) âœ¨"
    
re: fclean all
#		@echo "ðŸ¦‰ Re-compile was successfull (Ft_Printf) ðŸ¦‰"

